<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cht"
    tools:context="com.yrabdelrhmn.chatproject.auth.Signup">

    <View
        android:id="@+id/view_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:background="@drawable/card_shape_design"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />



    <ImageView
        android:id="@+id/imageView_girl"
        android:layout_width="78dp"
        android:layout_height="105dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="54dp"

        app:layout_constraintBottom_toTopOf="@+id/view_sign_up"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/tv_Sign_up_signup_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:text="Sign Up"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/view_sign_up"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/view_sign_up"
        app:layout_constraintTop_toTopOf="@+id/view_sign_up" />

    <EditText
        android:id="@+id/et_username_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/user"
        android:ems="17"
        android:hint="Name"
        android:inputType="text"
        android:paddingStart="5sp"
        android:pointerIcon="text"
        android:textColor="#E73039"
        android:textColorHint="#5BE73039"
        android:drawablePadding="8sp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="@+id/view_sign_up"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/view_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/tv_Sign_up_signup_screen" />

    <EditText
        android:id="@+id/et_email_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/email_icon"
        android:ems="17"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="5sp"
        android:pointerIcon="text"
        android:textColor="#E73039"
        android:textColorHint="#5BE73039"
        android:drawablePadding="8sp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="@+id/et_username_signup"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/et_username_signup"
        app:layout_constraintTop_toBottomOf="@+id/et_username_signup" />

    <EditText
        android:id="@+id/et_password_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/password_icon"
        android:drawablePadding="8sp"
        android:ems="17"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:layout_marginTop="20dp"

        android:inputType="textPassword"
        android:paddingStart="5sp"
        android:pointerIcon="text"
        android:textColor="#E73039"
        android:textColorHint="#5BE73039"
        app:layout_constraintStart_toStartOf="@+id/et_email_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/et_email_sign_up" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Sign up"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:background="@drawable/button_syle"
        app:layout_constraintEnd_toEndOf="@+id/et_password_sign_up"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/et_password_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/et_password_sign_up" />

    <View
        android:id="@+id/view2_sign_up"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#75E73039"
        app:layout_constraintEnd_toEndOf="@+id/btn_sign_up"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/btn_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_up" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="you have account?"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/view2_sign_up"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="@+id/view2_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/view2_sign_up" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="sans-serif"
        android:text="Login"
        android:onClick="gotoLogin"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3" />




</androidx.constraintlayout.widget.ConstraintLayout>