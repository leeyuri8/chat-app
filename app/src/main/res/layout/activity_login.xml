<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cht"
    tools:context="com.yrabdelrhmn.chatproject.auth.Login">


        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:background="@drawable/card_shape_design"
            android:outlineAmbientShadowColor="#000000"
            android:outlineSpotShadowColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="1.0" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.088"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            />

        <TextView
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:text="Login"
            android:textColor="#000"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <EditText
            android:id="@+id/et_email_login"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/email_icon"
            android:ems="17"

            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="5sp"
            android:pointerIcon="text"
            android:textColorHint="@color/white"
            android:textColor="#E73039"
            android:drawablePadding="8sp"
            android:fontFamily="sans-serif"
            app:layout_constraintEnd_toEndOf="@+id/log"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/log"
            app:layout_constraintTop_toBottomOf="@+id/log" />

        <EditText
            android:id="@+id/et_password_login"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/password_icon"
            android:ems="17"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="5sp"
            android:pointerIcon="text"
            android:textColorHint="@color/white"
            android:drawablePadding="8sp"
            android:fontFamily="sans-serif"
            app:layout_constraintEnd_toEndOf="@+id/et_email_login"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/et_email_login"
            app:layout_constraintTop_toBottomOf="@+id/et_email_login" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="sans-serif"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/et_password_login"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/et_password_login"
            app:layout_constraintTop_toBottomOf="@+id/et_password_login" />

        <View
            android:id="@+id/view2"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#75E73039"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="OR"
            android:textColor="#818080"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/view3"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <View
            android:id="@+id/view3"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            android:background="#75E73039"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <ImageView
            android:id="@+id/img_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/or"
            app:srcCompat="@drawable/social_media" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="you have account?"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/img_social"
            app:layout_constraintHorizontal_bias="0.196"
            app:layout_constraintStart_toStartOf="@+id/img_social"
            app:layout_constraintTop_toBottomOf="@+id/img_social" />

        <TextView
            android:id="@+id/tv_sign_up_login_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif"
            android:text="Sign Up"
            android:onClick="goToRegister"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>